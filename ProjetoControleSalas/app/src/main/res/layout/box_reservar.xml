<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:foregroundGravity="center_horizontal"
        android:src="@drawable/ic_text_fields_nome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <EditText
        android:id="@+id/textNomeReuniao"
        style="@style/EditTextFormField"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:hint="Nome Reunião"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageText"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <ImageView
        android:id="@+id/iconDescReuniao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_reuniao_ata"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageText"></ImageView>

    <TextView
        android:id="@+id/textDescReuniao"
        android:layout_width="350dp"
        style="@style/EditTextFormField"
        android:layout_marginLeft="12dp"
        app:layout_constraintStart_toEndOf="@id/iconDescReuniao"
        android:hint="Descrição da Reunião"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textNomeReuniao"></TextView>

    <ImageView
        android:id="@+id/iconQuantPessoas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_empresa_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconDescReuniao"></ImageView>

    <EditText
        android:id="@+id/quantPessoas"
        style="@style/EditTextFormField"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:hint="Quantidade de pessoas"
        app:layout_constraintStart_toEndOf="@+id/iconQuantPessoas"
        app:layout_constraintTop_toBottomOf="@id/textDescReuniao"></EditText>

    <ImageView
        android:id="@+id/iconTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_access_time_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconQuantPessoas"></ImageView>


    <EditText
        android:id="@+id/textData"
        style="@style/EditTextFormField"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:hint="date_and_hour"
        app:layout_constraintStart_toEndOf="@id/iconTime"
        app:layout_constraintTop_toBottomOf="@+id/quantPessoas"></EditText>


    <ImageView
        android:id="@+id/iconSala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconTime"></ImageView>

    <Spinner
        android:id="@+id/spinnerSalas"
        android:layout_width="350dp"
        android:layout_height="38dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintStart_toEndOf="@+id/iconSala"
        app:layout_constraintTop_toBottomOf="@id/textData"></Spinner>
</androidx.constraintlayout.widget.ConstraintLayout>