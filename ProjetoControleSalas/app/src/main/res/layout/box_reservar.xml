<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">


        <TextView
            android:id="@+id/textReuniao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center_vertical"
            android:gravity="left"
            android:text="@string/marcar_reuniao"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>


        <ImageView
            android:id="@+id/risco_desing"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/traco_desing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textReuniao" />


        <ImageView
            android:id="@+id/imageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:foregroundGravity="center_horizontal"
            android:src="@drawable/ic_text_fields_nome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/risco_desing"></ImageView>

        <TextView
            android:id="@+id/textViewReuniaoNome"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:text="Nome Reunião:"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageText"
            app:layout_constraintTop_toBottomOf="@+id/risco_desing"></TextView>


        <EditText
            android:id="@+id/textNomeReuniao"
            style="@style/EditTextFormField"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:hint="Nome Reunião"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageText"
            app:layout_constraintTop_toBottomOf="@+id/textViewReuniaoNome"></EditText>

        <ImageView
            android:id="@+id/iconDescReuniao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_reuniao_ata"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textNomeReuniao"></ImageView>

        <TextView
            android:id="@+id/textViewDesc"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="Descrição:"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iconDescReuniao"
            app:layout_constraintTop_toBottomOf="@+id/textNomeReuniao"></TextView>

        <EditText
            android:id="@+id/textDescReuniao"
            style="@style/EditTextFormField"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:hint="Descrição da Reunião"
            app:layout_constraintStart_toEndOf="@id/iconDescReuniao"
            app:layout_constraintTop_toBottomOf="@+id/textViewDesc"></EditText>

        <ImageView
            android:id="@+id/iconQuantPessoas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_empresa_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textDescReuniao"></ImageView>

        <TextView
            android:id="@+id/textViewCapacidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="Capacidade:"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iconQuantPessoas"
            app:layout_constraintTop_toBottomOf="@id/textDescReuniao"></TextView>

        <EditText
            android:id="@+id/quantPessoas"
            style="@style/EditTextFormField"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Quantidade de pessoas"
            app:layout_constraintStart_toStartOf="@+id/textViewCapacidade"
            app:layout_constraintTop_toBottomOf="@+id/textViewCapacidade"></EditText>

        <ImageView
            android:id="@+id/iconTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_access_time_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quantPessoas"></ImageView>

        <TextView
            android:id="@+id/textHourDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="Quando:"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/iconTime"
            app:layout_constraintTop_toBottomOf="@+id/quantPessoas"></TextView>


        <EditText
            android:id="@+id/textData"
            style="@style/EditTextFormField"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:hint="date_and_hour"
            app:layout_constraintStart_toEndOf="@+id/iconTime"
            app:layout_constraintTop_toBottomOf="@id/textHourDate"></EditText>

        <ImageView
            android:id="@+id/iconSala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textData"></ImageView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:text="Escolha a sala:"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/iconSala"
            app:layout_constraintTop_toBottomOf="@+id/textData"></TextView>

        <Spinner
            android:id="@+id/spinnerSalas"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:autofillHints="SALA"
            android:visibility="invisible"
            android:layout_marginLeft="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/iconSala"
            app:layout_constraintTop_toBottomOf="@+id/textView4"></Spinner>


        <Button
            android:id="@+id/buttonSave2"
            style="@style/ButtonForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:background="@android:color/transparent"
            android:text="@string/button_save"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerSalas"></Button>

    </androidx.constraintlayout.widget.ConstraintLayout>


